<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_edit_dialog_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_horizontal"
        android:text="@string/modify_walletname"
        android:layout_marginTop="24dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_light_blue_corner_10_bg"
        android:layout_marginHorizontal="18dp"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_et"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/transaction_blue_tv_color"
            android:text="@string/please_enter_name"
            android:background="@null"/>

        <ImageView
            android:id="@+id/iv_pwd_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingVertical="5dp"
            android:src="@drawable/selector_pwd_eye"/>

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="21dp"
        android:background="@color/transaction_blue_tv_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/normal_blue_color"
            android:textSize="@dimen/sp_16"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/transaction_blue_tv_color"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="@string/confirm"
            android:textColor="@color/normal_blue_color"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>

</LinearLayout>