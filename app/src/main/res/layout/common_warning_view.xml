<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_pop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000" />

    <LinearLayout
        android:id="@+id/ll_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/wallet_step_hint_title"
            android:textColor="@android:color/holo_red_dark" />


        <ImageView
            android:id="@+id/iv_pop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_camera_bg"
            android:src="@mipmap/camer_muite" />

        <TextView
            android:id="@+id/tv_pop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/wallet_step_hint_bottom"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_view_mnemonic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_btn_full_bg"
            android:paddingStart="26dp"
            android:paddingTop="6dp"
            android:paddingEnd="26dp"
            android:paddingBottom="6dp"
            android:text="@string/view_mnemonic"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>