<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_edit_dialog_bg">


    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tips_red_color"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="27dp"
        android:layout_marginHorizontal="15dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/confirm_to_reset"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/transaction_blue_tv_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/normal_blue_color"
            android:textSize="@dimen/sp_16"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/transaction_blue_tv_color"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="@string/confirm"
            android:textStyle="bold"
            android:textColor="@color/normal_blue_color"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>

</LinearLayout>