<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BaseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#2E1766"
    app:cardCornerRadius="12dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_up_mnemonic"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text="@string/current"
                android:textColor="@color/transaction_blue_color"
                android:textSize="10sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Account name: test 1"
            android:textColor="#ff8775ae"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Account address: TAbBgFNCgYHJvPRxG1wp57Va5Wae6chRwc"
            android:textColor="@color/transaction_blue_tv_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Back up time: 2023/07/19 22:33:00"
            android:textColor="@color/transaction_blue_tv_color"
            android:textSize="10sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>