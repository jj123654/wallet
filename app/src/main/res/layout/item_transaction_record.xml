<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_main_corner_10_bg"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/source_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="触发智能合约"/>

        <TextView
            android:id="@+id/address_tv"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            tools:text="dasjkfdljk12312312345345345345aksdljf"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/transaction_blue_tv_color"
            tools:text="转账数量："/>

        <TextView
            android:id="@+id/num_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="11sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            tools:text="dasjkfdljkaksdljf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/transaction_blue_tv_color"
            tools:text="2023/07/19 22:23:00"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="right"
            android:textColor="@color/transaction_blue_tv_color"
            tools:text="dlskjflasSDFSDFSDFjkdfasjddlskjflasSDFSDFSDFjkdfasjd"/>

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/transaction_green_color"
            tools:text="已确认"/>

    </LinearLayout>
</LinearLayout>
