<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_bg" />

    <View
        android:id="@+id/v_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/main_bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/wallet_indicator_img"
        android:layout_width="45dp"
        android:layout_height="3dp"
        android:layout_marginStart="58dp"
        android:src="@drawable/shape_blue_indicator_view"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_bg"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:src="@mipmap/icon_wallet_selected"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_bottom_bg" />

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginBottom="22dp"
        android:src="@mipmap/main_center_bg"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mine_indicator_img"
        android:layout_width="45dp"
        android:layout_height="3dp"
        android:layout_marginEnd="58dp"
        android:visibility="gone"
        android:src="@drawable/shape_blue_indicator_view"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58dp"
        android:src="@mipmap/icon_user_normal"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_bottom_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>