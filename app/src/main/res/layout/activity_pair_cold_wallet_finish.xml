<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:id="@+id/v_status_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_back_bg"
        android:padding="12dp"
        android:src="@mipmap/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_status_bar"/>



    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_round_white_bg">

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="11dp"
            android:background="#DFDFDF" />
    </FrameLayout>

    <TextView
        style="@style/common_white_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:padding="20dp"
        android:gravity="center"
        android:text="@string/pair_cold_wallet_finish_tips"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shape_main_corner_20_normal_bg"/>

    <TextView
        android:id="@+id/tv_has_signed"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_btn_full_bg"
        android:gravity="center"
        android:text="@string/cold_wallet_has_signed"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>