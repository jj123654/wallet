<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_edit_dialog_bg">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_horizontal"
        android:text="@string/private_key_qr_code"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/qr_img"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round_white_bg"
        android:padding="10dp"
        android:src="#DFDFDF" />



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="24dp"
        android:background="@color/transaction_blue_tv_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/normal_blue_color"
            android:textSize="@dimen/sp_16"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/transaction_blue_tv_color"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="@string/continue_tips"
            android:textColor="@color/normal_blue_color"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>

</LinearLayout>